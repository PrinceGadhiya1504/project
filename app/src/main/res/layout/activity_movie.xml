<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:orientation="vertical"
    tools:context=".movie">

    <TextView
        android:id="@+id/lblmovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/movie"
        android:textColor="@color/greenblue"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblmovie"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/layout_white">

        <ImageView
            android:id="@+id/imgfirst"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/image_radius"
            android:contentDescription="@string/moviephoto"
            android:src="@drawable/movie"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgfirst"
            android:layout_marginStart="50sp"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttitle"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdescription"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/price"
            android:textColor="@color/black" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnbooknow"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprice"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_style"
            android:text="@string/book_now" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_margin="10sp"
        android:background="@drawable/layout_white"
        >

        <ImageView
            android:id="@+id/imgfirst1"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/image_radius"
            android:contentDescription="@string/moviephoto"
            android:src="@drawable/movie"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/txttitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgfirst1"
            android:layout_marginStart="50sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtdescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttitle1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtprice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdescription1"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/price"
            android:textColor="@color/black" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnbooknow1"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprice1"
            android:background="@drawable/button_style"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"
            android:text="@string/book_now" />

    </RelativeLayout>

</RelativeLayout>