<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:orientation="vertical"
    tools:context=".movie">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblmovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/movie"
            android:textColor="@color/greenblue"
            android:textSize="40sp" />

        <RelativeLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblmovie"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/layout_white">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="196sp"
                android:contentDescription="@string/moviephoto"
                android:src="@drawable/movie"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/txttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txttitle"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="@string/description"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtdescription"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="@string/price"
                android:textColor="@color/black" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnbooknowmovie"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtprice"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20sp"
                android:background="@drawable/button_style"
                android:text="@string/book_now" />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>