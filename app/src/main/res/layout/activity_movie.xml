<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:orientation="vertical"
    tools:context=".Movie">

    <TextView
        android:id="@+id/lblmovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Movie"
        android:textColor="@color/greenblue"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblmovie"
        android:layout_margin="10sp"
        android:background="@drawable/layout_white"
        >

        <ImageView
            android:id="@+id/imgfirst"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginBottom="20sp"
            android:src="@drawable/movie"
            android:background="@drawable/image_radius"
            />

        <EditText
            android:id="@+id/txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgfirst"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="title"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txtdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttitle"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="Description"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txtprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdescription"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="Price"
            android:textColor="@color/black" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnbooknow"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprice"
            android:background="@drawable/button_style"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"
            android:text="Book Now" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_margin="10sp"
        android:background="@drawable/layout_white"
        >

        <ImageView
            android:id="@+id/imgfirst1"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginBottom="20sp"
            android:src="@drawable/movie"
            android:background="@drawable/image_radius"
            />

        <EditText
            android:id="@+id/txttitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgfirst1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="title"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txtdescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttitle1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="Description"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/txtprice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdescription1"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="Price"
            android:textColor="@color/black" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnbooknow1"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprice1"
            android:background="@drawable/button_style"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20sp"
            android:text="Book Now" />

    </RelativeLayout>

</RelativeLayout>